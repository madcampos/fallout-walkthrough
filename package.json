{
	"name": "fallout-walkthrough",
	"private": true,
	"version": "1.0.0",
	"displayName": "Fallout 2 Walkthrough",
	"shortName": "FO2 Walk",
	"description": "The Nearly Ultimate Fallout 2 Guide",
	"homepage": "https://madcampos.github.io/fallout/",
	"keywords": [
		"game",
		"fallout",
		"fallout 2",
		"walkthrough",
		"guide",
		"game guide"
	],
	"author": {
		"name": "madcampos",
		"email": "madcampos@outlook.com"
	},
	"license": "MIT",
	"browser": "./dist/index.html",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/fallout-walkthrough.git"
	},
	"scripts": {
		"postinstall": "husky install",
		"start": "vite",
		"start:sw": "vite",
		"typecheck": "tsc --noEmit",
		"lint": "npm run typecheck && npm run lint:js && npm run lint:css",
		"lint:js": "eslint src --ext .js,.mjs,.ts,.mts --fix --ignore-path .gitignore",
		"lint:css": "stylelint **/*.css --fix",
		"lint-staged": "lint-staged",
		"prebuild:app": "npm run lint",
		"build:app": "vite build",
		"build:icons-transparent": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --scrape false --opaque false --log false public/icons/transparent",
		"build:icons-maskable": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --scrape false --dark-mode --log false public/icons/maskable",
		"build:splash": "pwa-asset-generator build/logo.html --type png --splash-only --dark-mode --log false public/splash",
		"build:assets": "npm run build:icons-transparent && npm run build:icons-maskable && npm run build:splash",
		"prepreview": "npm run build:app",
		"preview": "vite preview --port 3000",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"c8": "^7.12.0",
		"eslint": "^8.21.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"pwa-asset-generator": "^6.1.1",
		"stylelint": "^14.9.1",
		"typescript": "^4.7.4",
		"vite": "^3.0.5",
		"vite-plugin-chunk-split": "^0.2.7",
		"vite-plugin-html": "^3.2.0",
		"vite-plugin-pwa": "^0.12.3",
		"vitest": "^0.21.1"
	},
	"engines": {
		"node": ">=17.0.0"
	},
	"volta": {
		"node": "17.8.0"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --ext .ts --fix",
			"vitest related"
		],
		"*.js": [
			"eslint --ext .js --fix",
			"vitest related"
		],
		"*.css": "stylelint --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
